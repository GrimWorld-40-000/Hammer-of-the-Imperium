<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef Abstract="true" ParentName="ApparelMakeableBase" Name="GW_AM_OnSkinBase">
    	<techLevel>Industrial</techLevel>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
        <stuffCategories>
            <li>Fabric</li>
        </stuffCategories>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <tradeTags>
            <li>HPOnSkin</li>
            <li>GW_AM_OnSkin</li>
        </tradeTags>
        <statBases>
            <Mass>0.3</Mass>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <apparel>
            <useWornGraphicMask>true</useWornGraphicMask>		
            <countsAsClothingForNudity>true</countsAsClothingForNudity>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Legs</li>
                <li>Shoulders</li>
                <li>Arms</li>
            </bodyPartGroups>
            <layers>
                <li>OnSkin</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

            <!-- Tempestus Scions Fatigues -->

    <ThingDef ParentName="GW_AM_OnSkinBase">
        <defName>ODZ_40k_IM_TempestusScion_Fatigues</defName>
        <description>Hardened combat jump suit worn by the Tempestus Scions.</description>
        <label>Tempestus Scion fatigues</label>
