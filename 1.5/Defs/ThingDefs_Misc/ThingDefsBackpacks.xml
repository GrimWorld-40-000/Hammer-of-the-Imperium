			<texPath>Things/ElysianDrop/Backpack/Elysium_Jetpack_Display</texPath>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>GW_AM_ElysianDropTroopers</researchPrerequisite>
		</recipeMaker>
		<statBases>
			<WorkToMake>2500</WorkToMake>
