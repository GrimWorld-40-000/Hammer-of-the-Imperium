<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!--Generic armor base. Every armor will have these things. Only add/change stuff in this if you want every armor to be affected-->
	<ThingDef Abstract="true" Name="GW_AM_BackpackBase" ParentName="GW_BackpackBase">
		<techLevel>Spacer</techLevel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
			<skillRequirements>
				<Crafting>9</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="false">
				<li>GW_AM_MilitarumArmorBench</li>
			</recipeUsers>
		</recipeMaker>
        <costStuffCount>100</costStuffCount>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>      
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>1</drawSize>
		</graphicData>
		<tradeTags>
			<li>GW_AM_Backpacks</li>
		</tradeTags>
		<apparel>
            <drawData>
				<dataWest>
					<offset>(0.2, 0.0, 0.0)</offset>
				</dataWest>
				<dataEast>
					<offset>(-0.2, 0.0, 0.0)</offset>
				</dataEast>
			</drawData>
			<tags>
				<li>Spacer</li>
                <li>GW_AM_Backpack</li>
			</tags>
		</apparel>
	</ThingDef>

    <ThingDef ParentName="GW_AM_BackpackBase">
		<defName>GW_AM_SmallBackpack</defName>
		<label>small backpack</label>
        <description>People with this pack can carry a few things with them.</description>
		<graphicData>
			<texPath>Things/Backpacks/Small_Backpack_Display</texPath>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>GW_AM_CadianShockTroops</researchPrerequisite>
		</recipeMaker>
        <costStuffCount>30</costStuffCount>
		<statBases>
			<WorkToMake>2500</WorkToMake>
			<MaxHitPoints>500</MaxHitPoints>
			<Mass>2</Mass>
			<Flammability>0.2</Flammability>
			<ArmorRating_Sharp>0.45</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.35</ArmorRating_Blunt>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Insulation_Cold>5</Insulation_Cold>
			<Insulation_Heat>5</Insulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
            <CarryingCapacity>30</CarryingCapacity>
			<VEF_MassCarryCapacity>30</VEF_MassCarryCapacity>
            <CarryBulk MayRequire="CETeam.CombatExtended">30</CarryBulk>
		</equippedStatOffsets>
		<apparel>
			<wornGraphicPath>Things/Backpacks/Small_Backpack</wornGraphicPath>
			<tags>
				<li>GW_CadianBackpack</li>
			</tags>
		</apparel>
	</ThingDef>

