	<!--===== Chimera Main Turret Melta =====-->
	<ThingDef ParentName="GW_LaserBullet">
        <defName>GW_HOI_Chimera_LascanonShot</defName>
        <label>lascannon shot</label>
        <description>An heavily charged beam of focused light fired from a lascannon.</description>
        <drawOffscreen>true</drawOffscreen>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <texPath>Things/Projectiles/Las_Bolt</texPath>
            <shaderType>TransparentPostLight</shaderType>
            <drawSize>1.5</drawSize>
        </graphicData>
		<projectile>
            <damageDef>Burn</damageDef>
            <damageAmountBase>120</damageAmountBase>
            <armorPenetrationBase>1.2</armorPenetrationBase>
            <stoppingPower>1</stoppingPower>
            <speed>1000</speed>
        </projectile>
		<modExtensions>
			<li Class="taranchuk_lasers.LaserProperties">
				<damageTickRate>21</damageTickRate>
				<lifetimeTicks>20</lifetimeTicks>
				<beamWidth>2</beamWidth>
				<beamWidthDrawScale>1</beamWidthDrawScale>
				<sweepRatePerTick>0</sweepRatePerTick>
				<maxSweepAngle>0</maxSweepAngle>
				<damageThingsAcrossBeamLine>False</damageThingsAcrossBeamLine>
				<debugCells>False</debugCells>
				<textureScrollOffsetPerTick>(0,0)</textureScrollOffsetPerTick>
				<lockOnTarget>False</lockOnTarget>
			</li>
		</modExtensions>
    </ThingDef>
