<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <GeneDef ParentName="GW_Races">
        <defName>GW_Ratling</defName>
        <label>ratling</label>
        <description>Ratlings are a smaller Abhuman species that are known for being small, quick on their feet, and excellent marksmen.</description>
        <iconPath>UI/Icons/Xenotypes/Ratling</iconPath>
        <biostatCpx>0</biostatCpx>
        <biostatMet>-1</biostatMet>
		<selectionWeight>0</selectionWeight>
        <forcedTraits>
            <li>
                <def>PsychicSensitivity</def>
                <degree>-1</degree>
            </li>
            <li>
                <def>Delicate</def>
            </li>
        </forcedTraits>
        <painFactor>1.25</painFactor>
        <missingGeneRomanceChanceFactor>0</missingGeneRomanceChanceFactor>
        <statFactors>
            <SM_BodySizeMultiplier>0.70</SM_BodySizeMultiplier>
            <MeleeDamageFactor>0.5</MeleeDamageFactor>
            <InjuryHealingFactor>2</InjuryHealingFactor>
            <RestFallRateFactor>0.70</RestFallRateFactor>
            <HuntingStealth>1.25</HuntingStealth>
        </statFactors>
        <capMods>
            <li>
                <capacity>Manipulation</capacity>
                <postFactor>1.1</postFactor>
            </li>
            <li>
                <capacity>Sight</capacity>
                <postFactor>1.1</postFactor>
            </li>
        </capMods>
        <statOffsets>
            <PawnBeauty>-1</PawnBeauty>
            <MoveSpeed>0.4</MoveSpeed>
        </statOffsets>
        <exclusionTags>
            <li>Pain</li>
            <li>WoundHealingRate</li>
            <li>Toughness</li>
            <li>MoveSpeed</li>
            <li>PsychicAbility</li>
            <li>Beauty</li>
            <li>MeleeDamage</li>
            <li>Hands</li>
            <li>Sleep</li>
            <li>Body_Size_Multiplier</li>
        </exclusionTags>
    </GeneDef>

    <ThoughtDef>
        <defName>GW_RatlingUnhappy</defName>
        <workerClass>ThoughtWorker_AlwaysActive</workerClass>
        <validWhileDespawned>true</validWhileDespawned>
        <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
        <requiredGenes>
            <li>GW_Ratling</li>
        </requiredGenes>
        <stages>
            <li>
                <label>ratling pessimism</label>
                <description>Natural agitation all Ratlings have.</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <XenotypeDef>
        <defName>GW_Ratling</defName>
        <label>ratling</label>
        <description>Ratlings are a smaller Abhuman species that are known for being small, quick on their feet, and excellent marksmen.\n\nTheir small stature makes it difficult for them to fight close up, but their excellent marksmanship makes them a valuable asset in the Astra Militarium ranks.</description>
        <descriptionShort>Ratlings are a smaller Abhuman species that are known for being small, quick on their feet, and excellent marksmen.</descriptionShort>
        <iconPath>UI/Icons/Xenotypes/Ratling</iconPath>
        <inheritable>true</inheritable>
        <genes>
            <li>GW_Ratling</li>
            <li>Body_Thin</li>
            <li>AptitudeRemarkable_Shooting</li>
            <li>AptitudeTerrible_Melee</li>
        </genes>
    </XenotypeDef>
</Defs>
