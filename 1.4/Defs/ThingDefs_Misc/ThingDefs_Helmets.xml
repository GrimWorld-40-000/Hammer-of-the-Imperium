    <ThingDef Abstract="true" ParentName="ArmorHelmetMakeableBase" Name="GW_AM_HelmetBase">
        <techLevel>Spacer</techLevel>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
