<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef Abstract="true" ParentName="ApparelMakeableBase" Name="GW_AM_MiddleBase">
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
            <drawSize>1.3</drawSize>
        </graphicData>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <tradeTags>
            <li>HPMiddle</li>
            <li>GW_AM_Middle</li>
        </tradeTags>
        <statBases>
            <Mass>0.3</Mass>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
		<uiIconScale>1.6</uiIconScale>
        <recipeMaker>
            <recipeUsers Inherit="false">
                <li>GW_AM_MilitarumArmorBench</li>
            </recipeUsers>
        </recipeMaker>
        <apparel>
            <useWornGraphicMask>true</useWornGraphicMask>		
			<tags>
				<li>RoyalTier2</li>
			</tags>
            <bodyPartGroups>
                <!-- <li>Torso</li> -->
                <li>Neck</li>
                <!-- <li>Shoulders</li> -->
                <!-- <li>Arms</li> -->
                <!-- <li>Legs</li> -->
            </bodyPartGroups>
            <layers>
                <li>Middle</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>
	
	<!-- Commissar Plate -->

	<ThingDef ParentName="GW_AM_MiddleBase">
        <defName>GW_AM_CommissarMiddle</defName>
        <label>commissar armor plate</label>
        <description>A breastplate designed to be worn in a Commissar’s uniform. It is decorated to fit in with the rest of the Commissar’s apparel. \n\nCommissars are not shy of battle - after all, it is they who set the example for their Guardsmen. If they are not supervising the local command staff, they are on the front lines, rending apart xenos and heretics alongside their troops.</description>
        <recipeMaker>
            <researchPrerequisite>GW_AM_OfficersOfAM</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Commissar/Display/CommissarPlate</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <!-- <costStuffCount>70</costStuffCount> -->
        <!-- <stuffCategories> -->
		<!-- <li>Metallic</li> -->
        <!-- </stuffCategories> -->
		<costList>
			<Steel>60</Steel>			
			<ComponentIndustrial>2</ComponentIndustrial>
			<HP_Ceramite>25</HP_Ceramite>
        </costList>	
        <thingCategories>
            <li>ApparelMisc</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>350</MaxHitPoints>
            <WorkToMake>12000</WorkToMake>
			<MarketValue>340</MarketValue>
            <Mass>2.5</Mass>
			<ArmorRating_Sharp>0.82</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.43</ArmorRating_Blunt>
            <ArmorRating_Heat>0.50</ArmorRating_Heat>
            <Insulation_Cold>15.0</Insulation_Cold>
			<Insulation_Heat>5.0</Insulation_Heat>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.5</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <SocialImpact>0.05</SocialImpact>
			<SlaveSuppressionOffset MayRequire="Ludeon.Rimworld.Ideology">0.05</SlaveSuppressionOffset>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Commissar/Middle/CommissarPlate</wornGraphicPath>
            <tags>
                <li>40kCommissar</li>
                <li>40kCommissarMiddle</li>
            </tags>
			<bodyPartGroups>
                <li>Torso</li>
                <!-- <li>Neck</li> -->
                <li>Shoulders</li>
                <!-- <li>Arms</li> -->
                <!-- <li>Legs</li> -->
            </bodyPartGroups>
        </apparel>
    </ThingDef>
	
</Defs>
