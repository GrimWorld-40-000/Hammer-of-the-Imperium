            <researchPrerequisite>GW_AM_TempestusScions</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/TempestusScions/Display/TempestusScionFatigues</texPath>
        </graphicData>
        <costStuffCount>85</costStuffCount>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToMake>4500</WorkToMake>
            <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.48</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
        </statBases>
        <apparel>
            <wornGraphicPath>Things/TempestusScions/Onskin/TempestusScionFatigues</wornGraphicPath>
            <tags>
                <li>40kTempestusScion</li>
                <li>40kTempestusScionUniform</li>
            </tags>
        </apparel>
    </ThingDef> 

