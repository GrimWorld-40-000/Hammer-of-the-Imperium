<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef Abstract="true" ParentName="ApparelMakeableBase" Name="GW_AM_OuterBase">
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <tradeTags>
            <li>HPOuter</li>
            <li>GW_AM_Outer</li>
        </tradeTags>
        <statBases>
            <Mass>0.3</Mass>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <apparel>
            <useWornGraphicMask>true</useWornGraphicMask>		
            <bodyPartGroups>
                <li>Torso</li>
                <li>Neck</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

    <ThingDef ParentName="GW_AM_OuterBase">
        <defName>GW_AM_CatachanOuter</defName>
        <label>Catachan vest</label>
        <description>Some Catachan outerwear designed to make movement easier and to protect the wearer from the jungle heat.</description>
        <recipeMaker>
            <researchPrerequisite>GW_AM_Catachan</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Catachan/Display/CatachanOuter</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <costStuffCount>70</costStuffCount>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <thingCategories>
            <li>ApparelMisc</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>200</MaxHitPoints>
            <WorkToMake>10000</WorkToMake>
            <Mass>1.5</Mass>
            <StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.30</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.85</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>0.2</MoveSpeed>
        </equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Catachan/CatachanOuter/CatachanOuter</wornGraphicPath>
            <tags>
                <li>40kCatachan</li>
                <li>40kCatachanOuter</li>
            </tags>
        </apparel>
        <tradeTags>
            <li>HPOuter</li>
        </tradeTags>
    </ThingDef>
</Defs>
