            <!-- Cadian Fatigues -->

    <ThingDef ParentName="GW_HOI_OnSkinBase">
        <defName>GW_HOI_Cadian_Fatigues</defName>
        <label>Cadian fatigues</label>
	    <description>Simple fatigues worn by all members of the Cadian Guard. The simple, cheap materials provide modest insulation from the elements but offer little protection in the face of bullets, blades, or teeth.</description>
        <recipeMaker>
            <researchPrerequisite>GW_AM_MilitariumArmor</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Cadian/Onskin/GW_HOI_CadianFatigues_Male_south</texPath>
        </graphicData>
        <costStuffCount>80</costStuffCount>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToMake>8000</WorkToMake>
			<Mass>1.5</Mass>
            <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.3</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.2</StuffEffectMultiplierInsulation_Heat>
            <MarketValue>150</MarketValue>
        </statBases>
		<equippedStatOffsets>
			<WorkSpeedGlobal>0.05</WorkSpeedGlobal>
		</equippedStatOffsets>
        <apparel>
            <wornGraphicPath>Things/Cadian/Onskin/GW_HOI_CadianFatigues</wornGraphicPath>
			<developmentalStageFilter>Child,Adult</developmentalStageFilter>
            <tags>
                <li>40kCadianGuard</li>
                <li>40kCadianUniform</li>
            </tags>
        </apparel>
    </ThingDef>

