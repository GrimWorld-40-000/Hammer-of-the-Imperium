<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="GW_HOI_ShellBase" ParentName="ResourceBase" Abstract="True">
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>25</stackLimit>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>250</MarketValue>
      <Mass>3</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.3</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>GW_HOI_EarthshakerShells</li>
    </thingCategories>
    <tradeTags>
      <li>GW_HOI_EarthshakerShell</li>
    </tradeTags>
  </ThingDef>

  <ThingDef Name="GW_HOI_MakeableShellBase" ParentName="GW_HOI_ShellBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>1000</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>HP_AM_MilitarumFabricationBench</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <displayPriority>100</displayPriority>
    </recipeMaker>
  </ThingDef>

  <!-- High-explosive -->

  <ThingDef ParentName="GW_HOI_MakeableShellBase">
    <defName>GW_HOI_132mm_HighExplosive</defName>
    <label>132mm high-explosive shell</label>
    <description>A 132mm high-explosive shell for the Earthshaker cannon, complete with a time fuze and fragmentation case. The most common round used by the Earthshaker by the Astra Militarum, suitable for blasting apart infantry, vehicles, and fortifications alike.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Ammo/GW_HOI_EarthshakerAmmo/HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>4.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>30~60</wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>GW_HOI_Bullet_132mm_HighExplosive</projectileWhenLoaded>
    <costList>
      <Steel>40</Steel>
      <Chemfuel>25</Chemfuel>
    </costList>
    <recipeMaker>
      <researchPrerequisite>GW_AM_ImperiumDefense</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>GW_HOI_Bullet_132mm_HighExplosive</defName>
    <label>high-explosive shell</label>
    <graphicData>
      <texPath>Things/Projectile/ShellHighExplosive</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>30</speed>
      <explosionRadius>6.9</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <arcHeightFactor>0.4</arcHeightFactor>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>


  <!-- Smoke Shell-->
    <ThingDef ParentName="GW_HOI_MakeableShellBase">
    <defName>GW_HOI_132mm_Smoke</defName>
    <label>132mm smoke shell</label>
    <description>A 132mm smoke shell for the Earthshaker cannon. For the subtler commander, this can be very useful for concealing troop movements - including an imminent ground assault.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Ammo/GW_HOI_EarthshakerAmmo/Smoke</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveDamageType>Smoke</explosiveDamageType>
        <explosiveRadius>11</explosiveRadius>
        <postExplosionGasType>BlindSmoke</postExplosionGasType>
        <wickTicks>30~60</wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>GW_HOI_Bullet_132mm_Smoke</projectileWhenLoaded>
    <costList>
      <Steel>25</Steel>
      <Chemfuel>10</Chemfuel>
    </costList>
    <recipeMaker>
      <researchPrerequisite>GW_AM_ImperiumDefense</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>GW_HOI_Bullet_132mm_Smoke</defName>
    <label>smoke shell</label>
    <graphicData>
      <texPath>Things/Projectile/ShellSmoke</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Smoke</damageDef>
      <speed>30</speed>
      <explosionRadius>11</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <arcHeightFactor>0.4</arcHeightFactor>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>Explosion_Smoke</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
      <postExplosionGasType>BlindSmoke</postExplosionGasType>
    </projectile>
  </ThingDef>

<!--Incendiary-->
    <ThingDef ParentName="GW_HOI_MakeableShellBase">
    <defName>GW_HOI_132mm_Incendiary</defName>
    <label>132mm Incendiary shell</label>
    <description>A 132mm incendiary shell for the Earthshaker cannon. These ones contain an oxy-phosphor gel core, allowing batteries of Earthshaker cannons to set whole grid squares ablaze.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Ammo/GW_HOI_EarthshakerAmmo/Incendiary</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3.9</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>30~60</wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>GW_HOI_Bullet_132mm_Incendiary</projectileWhenLoaded>
    <costList>
      <Steel>30</Steel>
      <Chemfuel>50</Chemfuel>
    </costList>
    <recipeMaker>
      <researchPrerequisite>GW_AM_ImperiumDefense</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>GW_HOI_Bullet_132mm_Incendiary</defName>
    <label>incendiary shell</label>
    <graphicData>
      <texPath>Things/Projectile/ShellIncendiary</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Flame</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>30</speed>
      <explosionRadius>4.9</explosionRadius>
      <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
      <preExplosionSpawnChance>0.25</preExplosionSpawnChance>
      <flyOverhead>true</flyOverhead>
      <arcHeightFactor>0.4</arcHeightFactor>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarIncendiary_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
      <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
  </ThingDef>

    <!-- High-explosive -->

  <ThingDef ParentName="GW_HOI_MakeableShellBase">
    <defName>GW_HOI_132mm_AP</defName>
    <label>132mm AP shell</label>
    <description>A 132mm armor-piercing shell for the Earthshaker cannon, with a diamantine tip. It trades some of its blast radius for an increased ability to penetrate armor, making the gun able to damage and destroy even heavily-armored vehicles with a solid hit.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Ammo/GW_HOI_EarthshakerAmmo/AP</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>30~60</wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>GW_HOI_Bullet_132mm_AP</projectileWhenLoaded>
    <costList>
      <Steel>60</Steel>
      <Chemfuel>25</Chemfuel>
    </costList>
    <recipeMaker>
      <researchPrerequisite>GW_AM_ImperiumDefense</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>GW_HOI_Bullet_132mm_AP</defName>
    <label>armor-piercing shell</label>
    <graphicData>
      <texPath>Things/Projectile/ShellHighExplosive</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>30</speed>
      <damageAmountBase>50</damageAmountBase>
      <explosionRadius>3.9</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <arcHeightFactor>0.4</arcHeightFactor>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
      <armorPenetrationBase>2.5</armorPenetrationBase>
      <stoppingPower>3</stoppingPower>
    </projectile>
  </ThingDef>
</Defs>
