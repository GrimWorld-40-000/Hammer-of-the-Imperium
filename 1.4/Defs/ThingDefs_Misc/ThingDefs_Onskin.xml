<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef Abstract="true" ParentName="ApparelMakeableBase" Name="GW_AM_OnSkinBase">
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>CutoutComplex</shaderType>
        </graphicData>
        <stuffCategories>
            <li>Fabric</li>
        </stuffCategories>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <tradeTags>
            <li>HPOnSkin</li>
        </tradeTags>
        <statBases>
            <Mass>0.3</Mass>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <apparel>
            <useWornGraphicMask>true</useWornGraphicMask>		
            <countsAsClothingForNudity>false</countsAsClothingForNudity>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Legs</li>
                <li>Shoulders</li>
                <li>Arms</li>
            </bodyPartGroups>
            <layers>
                <li>OnSkin</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
        </apparel>
    </ThingDef>

            <!-- Tempestus Scions Fatigues -->

    <ThingDef ParentName="GW_AM_OnSkinBase">
        <defName>ODZ_40k_IM_TempestusScion_Fatigues</defName>
        <description>Hardened combat jump suit worn by the Tempestus Scions.</description>
        <label>Tempestus Scion fatigues</label>
        <recipeMaker>
            <researchPrerequisite>ODZ_40K_IM_TempestusScion</researchPrerequisite>
        </recipeMaker>
        <graphicData>
            <texPath>Things/TempestusScions/Display/TempestusScionFatigues</texPath>
        </graphicData>
        <costStuffCount>85</costStuffCount>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToMake>4500</WorkToMake>
            <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.48</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
        </statBases>
        <apparel>
            <wornGraphicPath>Things/TempestusScions/Onskin/TempestusScionFatigues</wornGraphicPath>
            <tags>
                <li>40kTempestusScion</li>
                <li>40kTempestusScionUniform</li>
            </tags>
        </apparel>
    </ThingDef> 

