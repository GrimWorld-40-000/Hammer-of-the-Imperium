<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="GrimworldFabricationBenchBase">
        <defName>HP_AM_MilitarumFabricationBench</defName>
        <label>Militarum weapons workbench</label>
        <description>A workbench equipped with tools required for producing complex Astartes weapons like Lasguns, along with various armors.</description>
        <costList>
            <Steel>400</Steel>
            <ComponentIndustrial>8</ComponentIndustrial>
        </costList>
        <recipes>
            <li>GW_Make_ComponentRelic</li>
        </recipes>
        <graphicData>
            <texPath>Things/Building/Production/MilitarumWeaponBench/AstraMilitarumBench_Weapon</texPath>
        </graphicData>
        <researchPrerequisites>
            <li>GW_AM_TacticaImperium</li>
        </researchPrerequisites>
    </ThingDef>

    <ThingDef ParentName="GrimworldFabricationBenchBase">
        <defName>GW_AM_MilitarumArmorBench</defName>
        <label>Militarum armor workbench</label>
        <description>A workbench equipped with tools required for producing complex Astartes weapons like Lasguns, along with various armors.</description>
        <costList>
            <Steel>400</Steel>
            <ComponentIndustrial>8</ComponentIndustrial>
        </costList>
        <recipes>
            <li>GW_Make_ComponentRelic</li>
        </recipes>
        <graphicData>
            <texPath>Things/Building/Production/MilitarumArmorBench/AstraMilitarumBench_Armor</texPath>
        </graphicData>
        <researchPrerequisites>
            <li>GW_AM_TacticaImperium</li>
        </researchPrerequisites>
    </ThingDef>

    <WorkGiverDef ParentName="GWFabricationWorkGiverBase">
        <defName>DoBillsMilitarumFabricationBench</defName>
        <fixedBillGiverDefs>
            <li>HP_AM_MilitarumFabricationBench</li>
            <li>GW_AM_MilitarumArmorBench</li>
        </fixedBillGiverDefs>
    </WorkGiverDef>
</Defs>
