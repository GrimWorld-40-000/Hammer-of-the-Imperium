            <ArmorRating_Heat>0.20</ArmorRating_Heat>
            <Insulation_Cold>10</Insulation_Cold>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <MoveSpeed>-0.1</MoveSpeed>
        </equippedStatOffsets>
        <costList>
            <Steel>100</Steel>
        </costList>	
        <apparel>
            <wornGraphicPath>Things/Valhallan/Middle/armor</wornGraphicPath>
            <tags>
