<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName="Pirate"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<GW_Ogryn>0.001</GW_Ogryn>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName="Pirate"]/pawnGroupMakers/li[kindDef="Combat"]/options</xpath>
		<order>Append</order>
		<value>
			<GW_OgrynEnforcer>4</GW_OgrynEnforcer>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName="Pirate"]/pawnGroupMakers/li[kindDef="Combat" or kindDef="Settlement"]/options</xpath>
		<order>Append</order>
		<value>
			<GW_OgrynGunner>4</GW_OgrynGunner>
		</value>
	</Operation>

        <!--Add to Outlanders-->
    <Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[@Name="OutlanderFactionBase"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<GW_Ogryn>0.001</GW_Ogryn>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[@Name="OutlanderFactionBase"]/pawnGroupMakers/li[kindDef="Trader"]/guards</xpath>
		<value>
			<GW_OgrynGunner>10</GW_OgrynGunner>
			<GW_OgrynEnforcer>10</GW_OgrynEnforcer>
		</value>
	</Operation>

        <!--Add as rare refugee type-->
    <Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName="OutlanderRefugee"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<GW_Ogryn>0.001</GW_Ogryn>
		</value>
	</Operation>
</Patch>
