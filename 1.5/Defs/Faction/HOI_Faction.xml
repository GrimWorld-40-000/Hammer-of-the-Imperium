<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <RulePackDef>
        <defName>GW_Namer_AstraMilitarum</defName>
        <rulePack>
            <rulesStrings>
                <li>r_name->The Astra Militarum</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>

    <ThingSetMakerDef ParentName="GW_ImperialLootBase">
        <defName>GW_AM_RaidLootMaker</defName>
        <root Class="ThingSetMaker_MarketValue">
            <fixedParams>
                <filter>
                    <thingDefs>
                        <li>FieldMedkit</li>
                    </thingDefs>
                </filter>
            </fixedParams>
        </root>
    </ThingSetMakerDef>

    <FactionDef ParentName="GW_ImperialFactionBase">
        <defName>GW_HOI_AstraMilitarum</defName>
        <label>Astra Militarum</label>
        <description>A regiment of the Astra Militarum, the regular army of the former Imperium of Man. Specializing in massed attack and sheer stubbornness, the Imperial Guard overwhelms their enemies with a storm of lasbolts and a rush of bayonets.</description>
        <configurationListOrderPriority>998</configurationListOrderPriority>
        <leaderTitle>lord general</leaderTitle>
        <techLevel>Spacer</techLevel>
        <pawnSingular>imperial</pawnSingular>
        <pawnsPlural>imperials</pawnsPlural>
        <factionIconPath>UI/Icons/AstraMilitarum</factionIconPath>
        <factionNameMaker>GW_Namer_AstraMilitarum</factionNameMaker>
        <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
        <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
        <colorSpectrum>
            <li>(0.35, 0.44, 0.26)</li>
        </colorSpectrum>
        <!---
        <backstoryFilters>
            <li>
                <categories>
                    <li>GW_HOI_Backgrounds</li>
                </categories>
            </li>
        </backstoryFilters>
        -->
        <baseTraderKinds>
            <li>GW_HOI_Trader</li>
        </baseTraderKinds>
        <caravanTraderKinds>
            <li>GW_HOI_Trader_Caravan</li>
        </caravanTraderKinds>
        <raidLootMaker>GW_AM_RaidLootMaker</raidLootMaker>
        <xenotypeSet>
            <xenotypeChances>
                <Baseliner MayRequire="Ludeon.RimWorld.Biotech">0.86</Baseliner>
                <BEWH_Ratling MayRequire="Phonicmas.40kAbhumans">0.07</BEWH_Ratling>
                <BEWH_Ogryn MayRequire="Phonicmas.40kAbhumans">0.07</BEWH_Ogryn>
            </xenotypeChances>
        </xenotypeSet>
        <maxPawnCostPerTotalPointsCurve>
            <points>
                <li>(0,35)</li>
                <li>(70, 50)</li>
                <li>(700, 100)</li>
                <li>(1300, 150)</li>
                <li>(100000, 10000)</li>
            </points>
        </maxPawnCostPerTotalPointsCurve>
        <pawnGroupMakers>
                <!-- Each regiment gets their own raid group. This is to prevent raids from looking strange due to a wide variety of regiments appearing together. -->
            <!--Cadian-->
            <li>
                <kindDef>Combat</kindDef>
                <commonality>1</commonality>
                <options>
                    <GW_HOI_Cadian_RangedTier1>5</GW_HOI_Cadian_RangedTier1>
                    <GW_HOI_Cadian_MeleeTier1>3</GW_HOI_Cadian_MeleeTier1>
                    <GW_HOI_Cadian_RangedTier2>7</GW_HOI_Cadian_RangedTier2>
                    <GW_HOI_Cadian_MeleeTier2>5</GW_HOI_Cadian_MeleeTier2>
                    <GW_HOI_Cadian_RangedTier3>10</GW_HOI_Cadian_RangedTier3>
                    <GW_HOI_Cadian_MeleeTier3>7</GW_HOI_Cadian_MeleeTier3>
                    <GW_HOI_Cadian_RangedSpecialWeapon>2</GW_HOI_Cadian_RangedSpecialWeapon>
                    <GW_HOI_Cadian_Officer>3</GW_HOI_Cadian_Officer>
                    <GW_HOI_LordGeneral>1</GW_HOI_LordGeneral>
                    <GW_HOI_Commissar>1</GW_HOI_Commissar>
                </options>
            </li>

            <!--The misfits-->
            <li MayRequire="Phonicmas.40kAbhumans">
                <kindDef>Combat</kindDef>
                <commonality>1</commonality>
                <options>
                    <GW_OgrynEnforcer MayRequire="Phonicmas.40kAbhumans">2</GW_OgrynEnforcer>
                    <GW_OgrynGunner MayRequire="Phonicmas.40kAbhumans">2</GW_OgrynGunner>
                    <GW_RatlingSniper MayRequire="Phonicmas.40kAbhumans">4</GW_RatlingSniper>
                </options>
            </li>
        
                <!-- Traders and Base Defense will pull from any of the tier 3 pawns -->
            <li>
                <kindDef>Trader</kindDef>
                <traders>
                    <GW_HOI_Cadian_Officer>1</GW_HOI_Cadian_Officer>
                </traders>
                <carriers>
                    <Muffalo>6</Muffalo>
                    <Dromedary>5</Dromedary>
                    <Alpaca>2</Alpaca>
                    <Elephant>1</Elephant>
                </carriers>
                <guards>
                    <GW_HOI_Cadian_RangedTier2>3</GW_HOI_Cadian_RangedTier2>
                    <GW_HOI_Cadian_MeleeTier2>2</GW_HOI_Cadian_MeleeTier2>
                    <GW_HOI_Cadian_RangedTier3>4</GW_HOI_Cadian_RangedTier3>
                    <GW_HOI_Cadian_MeleeTier3>2</GW_HOI_Cadian_MeleeTier3>
                    <GW_OgrynEnforcer MayRequire="Phonicmas.40kAbhumans">2</GW_OgrynEnforcer>
                    <GW_OgrynGunner MayRequire="Phonicmas.40kAbhumans">2</GW_OgrynGunner>
                    <GW_RatlingSniper MayRequire="Phonicmas.40kAbhumans">4</GW_RatlingSniper>
                </guards>
            </li>
            <li>
                <kindDef>Peaceful</kindDef>
                <options>
                    <GW_HOI_Cadian_RangedTier2>3</GW_HOI_Cadian_RangedTier2>
                    <GW_HOI_Cadian_MeleeTier2>2</GW_HOI_Cadian_MeleeTier2>
                    <GW_HOI_Cadian_RangedTier3>4</GW_HOI_Cadian_RangedTier3>
                    <GW_HOI_Cadian_MeleeTier3>2</GW_HOI_Cadian_MeleeTier3>
                    <GW_OgrynEnforcer MayRequire="Phonicmas.40kAbhumans">2</GW_OgrynEnforcer>
                    <GW_OgrynGunner MayRequire="Phonicmas.40kAbhumans">2</GW_OgrynGunner>
                    <GW_RatlingSniper MayRequire="Phonicmas.40kAbhumans">4</GW_RatlingSniper>
                </options>
            </li>
            <li>
                <kindDef>Settlement</kindDef>
                <options>
                    <GW_HOI_Cadian_RangedTier2>3</GW_HOI_Cadian_RangedTier2>
                    <GW_HOI_Cadian_MeleeTier2>2</GW_HOI_Cadian_MeleeTier2>
                    <GW_HOI_Cadian_RangedTier3>4</GW_HOI_Cadian_RangedTier3>
                    <GW_HOI_Cadian_MeleeTier3>2</GW_HOI_Cadian_MeleeTier3>
                    <GW_OgrynEnforcer MayRequire="Phonicmas.40kAbhumans">2</GW_OgrynEnforcer>
                    <GW_OgrynGunner MayRequire="Phonicmas.40kAbhumans">2</GW_OgrynGunner>
                    <GW_RatlingSniper MayRequire="Phonicmas.40kAbhumans">4</GW_RatlingSniper>
                </options>
            </li>
        </pawnGroupMakers>
        <allowedArrivalTemperatureRange>-10~45</allowedArrivalTemperatureRange>
    </FactionDef>
</Defs>
