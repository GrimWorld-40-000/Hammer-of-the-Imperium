	<ThingDef ParentName="GW_AM_BackpackBase">
		<defName>GW_AM_VoxBackpack</defName>
		<label>vox backpack</label>
        <description>People with this pack can call in an orbital strike once every 5 days.</description>
		<graphicData>
			<texPath>Things/Backpacks/Vox_Pack_Display</texPath>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>GW_AM_CadianShockTroops</researchPrerequisite>
		</recipeMaker>
		<statBases>
			<WorkToMake>2500</WorkToMake>
			<MaxHitPoints>500</MaxHitPoints>
			<Mass>2</Mass>
			<Flammability>0.2</Flammability>
			<ArmorRating_Sharp>0.45</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.35</ArmorRating_Blunt>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Insulation_Cold>5</Insulation_Cold>
			<Insulation_Heat>5</Insulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<costList>
			<ComponentIndustrial>10</ComponentIndustrial>
            <ComponentSpacer>3</ComponentSpacer>
		</costList>
        <verbs>
            <li>
                <verbClass>Verb_Bombardment</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <useableInPocketMaps>false</useableInPocketMaps>
                <warmupTime>3</warmupTime>
                <ai_AvoidFriendlyFireRadius>23</ai_AvoidFriendlyFireRadius>
                <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
                <range>44.9</range>
                <burstShotCount>1</burstShotCount>
                <soundAiming>OrbitalTargeter_Aiming</soundAiming>
                <soundCast>OrbitalTargeter_Fire</soundCast>
                <onlyManualCast>true</onlyManualCast>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
            </li>
        </verbs>
        <comps>
            <li Class="CompProperties_ApparelReloadable">
                <maxCharges>1</maxCharges>
                <destroyOnEmpty>false</destroyOnEmpty>
                <replenishAfterCooldown>True</replenishAfterCooldown>
                <baseReloadTicks>300000</baseReloadTicks>
                <hotKey>Misc4</hotKey>
                <chargeNoun>charge</chargeNoun>
                <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
            </li>
        </comps>
		<apparel>
            <drawData>
				<dataSouth>
                    <offset>(0.0, 0.0, 0.4)</offset>
				</dataSouth>
				<dataWest>
					<offset>(0.2, 0.0, 0.4)</offset>
				</dataWest>
				<dataEast>
					<offset>(-0.2, 0.0, 0.4)</offset>
				</dataEast>
				<dataNorth>
					<offset>(0.0, 0.0, 0.4)</offset>
				</dataNorth>
			</drawData>
			<wornGraphicPath>Things/Backpacks/Vox_Pack</wornGraphicPath>
			<tags>
				<li>GW_CadianBackpack</li>
			</tags>
		</apparel>
	</ThingDef>
</Defs>